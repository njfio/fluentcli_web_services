#!/bin/bash

# Set a nice background
xsetroot -solid "#2E3440" &

# Start panel
(sleep 1 && tint2) &

# Start file manager for desktop icons
(sleep 2 && pcmanfm --desktop) &

# Start a terminal
(sleep 1 && xterm -geometry 80x24+10+10 -fa "DejaVu Sans Mono" -fs 11 -bg "#2E3440" -fg "#D8DEE9" -title "Terminal") &

# Set cursor
xsetroot -cursor_name left_ptr &

# Update menus
(sleep 2 && update-menus) &
