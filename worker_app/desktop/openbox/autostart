# Set a nice background
nitrogen --set-zoom-fill /usr/share/backgrounds/default.jpg &

# Set a solid color as fallback
xsetroot -solid "#2E3440" &

# Start panel
tint2 &

# Start file manager for desktop icons
pcmanfm --desktop &

# Start a terminal
xterm -geometry 80x24+10+10 -fa "DejaVu Sans Mono" -fs 11 -bg "#2E3440" -fg "#D8DEE9" -title "Terminal" &

# Set cursor
xsetroot -cursor_name left_ptr &
